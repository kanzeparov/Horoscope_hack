<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/tools">
    <ScrollView
        android:id="@+id/item_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >  <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"

        card_view:cardCornerRadius="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aspekt_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/text_black"
                android:gravity="left|center_horizontal|top"
                android:text="Аспект А-В"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/info_aspect3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="Тест поможет определить
потенциал ваших отношений на
начальном этапе."
                android:textColor="@color/text_black"
                android:textSize="14sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView></ScrollView>
</android.support.constraint.ConstraintLayout>